{
  "manifest_version": 3,
  "name": "Don't Read Later",
  "version": "1.0.0",
  "description": "Don't read later, read now! Stop bookmarking and start reading.",
  "author": "Kanasero",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Don't Read Later",
    "default_popup": "index.html#/popup",
    "default_icon": "icons/app-icon-16.png"
  },
  "options_page": "index.html#/options",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "icons": {
    "16": "icons/app-icon-16.png",
    "32": "icons/app-icon-32.png",
    "48": "icons/app-icon-48.png",
    "128": "icons/app-icon-128.png"
  }
}
